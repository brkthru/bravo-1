# Production Export Pipeline Configuration
# Copy this to pipeline.env and fill in your values

# AWS Configuration
AWS_PROFILE=default
AWS_REGION=us-east-1
RDS_INSTANCE=media-tool-production
RDS_EXPORT_ROLE_ARN=arn:aws:iam::123456789012:role/rds-s3-export-role

# Production Database (for direct pg_dump method)
PROD_PG_HOST=media-tool-prod.cluster-xxxxx.us-east-1.rds.amazonaws.com
PROD_PG_PORT=5432
PROD_PG_DB=media_tool
PROD_PG_USER=readonly_user
PROD_PG_PASSWORD=secure_password

# Local PostgreSQL
LOCAL_PG_HOST=localhost
LOCAL_PG_PORT=5432
LOCAL_PG_USER=postgres
LOCAL_PG_PASSWORD=postgres

# S3 Storage
S3_BUCKET=media-tool-backups
S3_PREFIX=postgres-exports

# Export Method (snapshot or direct)
EXPORT_METHOD=direct

# Cleanup Options
DROP_LOCAL_DB=false

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017